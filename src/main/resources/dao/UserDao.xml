<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.UserDao">

    <!--保存-->
    <insert id="save" parameterType="pojo.User">
        insert into `b_user`(uname, upassword, avatar, roles, email, state, create_time, update_time)
            value (#{uname}, #{password}, #{avatar}, #{roles},#{email}, #{state}, #{createTime}, #{updateTime})
    </insert>

    <!--删除-->
    <delete id="deleteAllById">
        delete from `b_user` where id = #{userId}
    </delete>

    <!--查询-->
    <select id="findOneById" resultType="pojo.User">
        select * from `b_user` where id = #{userId}
    </select>

    <!--查询所有-->
    <select id="findAll" resultType="pojo.User">
        select * from `b_user`
    </select>

<!--    同过邮箱找用户-->
    <select id="findOneByEmail" resultType="pojo.User">
        select * from `b_user` where `email` = #{email}
    </select>

<!--    通过名字找用户-->
    <select id="findOneByName" resultType="pojo.User">
        select * from `b_user` where `uname` = #{uname}
    </select>

<!--通过更新状态删除用户-->
    <delete id="deleteUserByState">
        update `b_user` set `state` = '0'where id =#{userId}
    </delete>

<!--    通过id修改邮箱-->
    <update id="updateEmailById">
        update `b_user` set `email` = #{param2} where `id` = #{param1}
    </update>

<!--    同过邮箱修改密码-->
    <update id="updatePasswordByEmail">
        update `b_user` set `upassword` = #{param2} where `email` = #{param1}
    </update>
</mapper>
