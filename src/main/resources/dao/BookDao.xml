<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BookDao">
<!--    保存书籍-->
    <insert id="save">
        insert into `b_book`(bname, price, author, isbn, publisher, intro, cover)
        value (#{name}, #{price}, #{author}, #{isbn}, #{publisher}, #{intro}, #{cover})
    </insert>

<!--    删除书籍-->
    <delete id="deleteAllById">
        delete from `b_book` where id = #{bookId}
    </delete>

<!--    查寻书籍-->
    <select id="findOneById" resultType="pojo.Book">
        select * from `b_book` where id = #{bookId}
    </select>

<!--    查询所有书籍-->
    <select id="findAll" resultType="pojo.Book">
        select * from `b_book`
    </select>


</mapper>